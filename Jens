pipeline {
    agent any
    environment {
        JAVA_HOME = "C:\\Program Files\\Java\\jdk-21"
        PATH = "${JAVA_HOME}\\bin;${env.PATH}"
    }
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'master', url: 'https://github.com/Keerthi26099/demo1_rep.git'
            }
        }
        stage('Verify Files') {
            steps {
                bat 'dir'  // List all files in the workspace
            }
        }
        stage('Compile Java Code') {
            steps {
                bat 'javac H.java'  // Compile H.java
            }
        }
        stage('Run Java Code') {
            steps {
                bat 'java H'  // Run the compiled Java program
            }
        }
    }
}
